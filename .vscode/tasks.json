{
	"version": "2.0.0",
	"tasks": [
		{
            "type": "shell",
            "label": "clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "${file}",
                "-g",
                "-O0",
                "-std=c++20",
                "-I",
                "/workspaces/atcoder/ac-library",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "group": "build"
        },
		{
            "label": "submit",
            "group": "build",
            "type": "shell",
            "command": "${workspaceFolder}/submit.sh",
            "args": [
				"${fileBasenameNoExtension}",
				"${file}",
				"${relativeFileDirname}"
            ]
        },
        {
            "label": "test",
            "group": "build",
            "type": "shell",
            "command": "${workspaceFolder}/test.sh",
            "args": [
				"${fileBasenameNoExtension}",
				"${fileExtname}",
				"${file}",
				"${relativeFileDirname}",
            ]
        }
	]
}
