{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "test atcoder samples",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"type": "shell",
			"command": "${workspaceFolder}/cptest.sh",
			"args": [
				"${fileBasenameNoExtension}",
				"${fileExtname}",
				"${file}",
				"${relativeFileDirname}",
			],
			"problemMatcher": []
		},
		{
            "label": "submit atcoder",
            "group": "build",
            "type": "shell",
            "command": "${workspaceFolder}/cpsubmit.sh",
            "args": [
				"${fileBasenameNoExtension}",
				"${file}",
				"${relativeFileDirname}",
            ],
            "problemMatcher": []
        },
	]
}