{
	"version": "2.0.0",
	"tasks": [
		{
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/local/bin/g++",
            "args": [
                "-g",
                "-O0",
                "-std=c++14",
                "${file}",
                "-I",
                "~/kyopuro/atcoder/ac-library",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
            ],
            "options": {
                "cwd": "/usr/local/bin"
            },
            "problemMatcher": [
                "$g++",
            ],
            "group": "build"
        },
		{
			"label": "test atcoder samples",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"type": "shell",
			"command": "${workspaceFolder}/cptest.sh",
			"args": [
				"${fileBasenameNoExtension}",
				"${fileExtname}",
				"${file}",
				"${relativeFileDirname}",
			],
			"problemMatcher": []
		},
		{
            "label": "submit atcoder",
            "group": "build",
            "type": "shell",
            "command": "${workspaceFolder}/cpsubmit.sh",
            "args": [
				"${fileBasenameNoExtension}",
				"${file}",
				"${relativeFileDirname}",
            ],
            "problemMatcher": []
        },
        {
            "label": "ahc test",
            "group": "build",
            "type": "shell",
            "command": "${workspaceFolder}/ahctest.sh",
            "args": [
                "${fileBasenameNoExtension}",
                "${file}",
                "${fileDirname}",
            ],
            "problemMatcher": []
        }
	]
}